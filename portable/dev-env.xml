<?xml version="1.0" encoding="utf-8" ?>
<portable-config>
    <config-file path="WEB-INF/classes/application.properties">
        <replace key="env.flag">dev</replace>

        <!--datasource-->
        <replace key="spring.datasource.url">jdbc:mysql://localhost:3306/coffeewx-admin?useUnicode=true&amp;characterEncoding=utf8&amp;useSSL=false</replace>
        <replace key="spring.datasource.username">root</replace>
        <replace key="spring.datasource.password">123456</replace>
